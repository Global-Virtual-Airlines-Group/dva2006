<?xml version="1.0" encoding="utf-8"?>
<tasks name="default">
	<!-- Purge/Notify Inactive Users -->
	<task id="inactivity" enabled="true">
		<class>org.deltava.tasks.InactivityUpdateTask</class>
		<time>
			<min>0</min>
			<hour>3</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Download NAT Track data -->
	<task id="nat" enabled="true">
		<class>org.deltava.tasks.NATDownloadTask</class>
		<time>
			<min>0</min>
			<hour>8,12,16</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Download PACOT Track data -->
	<task id="pacot" enabled="true">
		<class>org.deltava.tasks.PACOTDownloadTask</class>
		<time>
			<min>0</min>
			<hour>20,6</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Download AUSOT Track data -->
	<task id="ausot" enabled="true">
		<class>org.deltava.tasks.AUSOTDownloadTask</class>
		<time>
			<min>0</min>
			<hour>8,20</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge old Draft Flight Reports -->
	<task id="draftpurge" enabled="true">
		<class>org.deltava.tasks.DraftPIREPPurgeTask</class>
		<time>
			<min>0</min>
			<hour>8</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge old Flight Assignments -->
	<task id="assignpurge" enabled="true">
		<class>org.deltava.tasks.AssignmentPurgeTask</class>
		<time>
			<min>5</min>
			<hour>8</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Update HTTP server statistics -->
	<task id="httpstats" enabled="true">
		<class>org.deltava.tasks.HTTPLogStatisticsTask</class>
		<time>
			<min>30</min>
			<hour>1</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge old FlightAware routes -->
	<task id="purgeroutecache" enabled="true">
		<class>org.deltava.tasks.CachedRouteUpdateTask</class>	
		<time>
			<min>30</min>		
			<hour>9</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge unfinished ACARS flight entries -->
	<task id="acarspurge" enabled="true">
		<class>org.deltava.tasks.ACARSDataPurgeTask</class>
		<time>
			<min>30</min>
			<hour>2,14</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge Command statistics -->
	<task id="cmdlogpurge" enabled="true">
		<class>org.deltava.tasks.CommandLogPurgeTask</class>
		<time>
			<min>0</min>
			<hour>6,18</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge SELCAL code reservations -->
	<task id="selcalpurge" enabled="true">
		<class>org.deltava.tasks.SELCALPurgeTask</class>
		<time>
			<min>0</min>
			<hour>7</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Create Online Event Flight Assignments -->
	<task id="eventassign" enabled="true">
		<class>org.deltava.tasks.EventAssignTask</class>
		<time>
			<min>0,30</min>
			<hour>*</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Water Cooler Image Link validation -->
	<task id="imgurlvalidate" enabled="true">
		<class>org.deltava.tasks.ImageLinkTestTask</class>
		<time>
			<min>45</min>
			<hour>8</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Innovata Schedule download -->
	<task id="innovatadl" enabled="true">
		<class>org.deltava.tasks.ScheduleImportTask</class>
		<time>
			<min>0</min>
			<hour>9</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Transfer Request purge -->
	<task id="txpurge" enabled="true">
		<class>org.deltava.tasks.TransferPurgeTask</class>
		<time>
			<min>0</min>
			<hour>11</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- METAR download -->
	<task id="metar" enabled="true">
		<class>org.deltava.tasks.METARDownloadTask</class>
		<time>
			<min>5</min>
			<hour>*</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>
	
	<!-- TAF download -->
	<task id="taf" enabled="true">
		<class>org.deltava.tasks.TAFDownloadTask</class>
		<time>
			<min>30</min>
			<hour>5,11,17,23</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>
</tasks>
