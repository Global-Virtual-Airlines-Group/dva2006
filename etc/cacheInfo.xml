<?xml version="1.0" encoding="UTF-8"?>
<caches>
	<!-- Pilot data caches -->
	<cache id="UserData" remote="true" />
	<cache id="Pilots" remote="true" />

	<!-- Image caches -->
	<cache id="Signature" max="640" />
	<cache id="Image" max="32" expires="600" />
	<cache id="Tracks" expires="604800" remote="true" />

	<!-- Water Cooler caches -->
	<cache id="CoolerChannels" max="64" expires="1800" />
	<cache id="CoolerThreads" max="1024" expires="900" />

	<!-- Navigation Data caches -->
    <cache id="NavData" expires="86400" remote="true" />
    <cache id="NavAirway" expires="86400" remote="true" />
    <cache id="NavRunway" expires="86400" remote="true" />
    <cache id="NavSIDSTAR" expires="86400" remote="true" />
    <cache id="NavRoute" expires="86400" remote="true" />
	<cache id="FIRs" max="512" />
	<cache id="FIRIDs" max="256" />

	<!-- ACARS caches -->
	<cache id="ACARSMap" max="1" expires="3" />
	<cache id="ACARSFlightID" max="1" expires="3" />
	<cache id="ACARSRunways" remote="true" expires="86400" />

	<!-- Statistics caches -->
	<cache id="GreasedLandings" max="16" expires="1800" />
	<cache id="LandingStats" max="64" expires="1800" />
	<cache id="FlightStats" max="16" expires="600" />
	<cache id="ProgramStats" max="8" expires="1800" />

	<!-- Weather caches -->
	<cache id="METAR" max="256" expires="1800" />
	<cache id="TAF" max="256" expires="1800" />
	<cache id="FlightAwareMETAR" max="256" expires="1800" />
	<cache id="FlightAwareTAF" max="256" expires="1800" />

	<!-- ServInfo caches -->
	<cache id="ServInfoData" max="3" expires="30" />

	<!-- System caches -->
	<cache id="AircraftInfo" max="96" expires="3600" />
	<cache id="EquipmentTypes" max="24" expires="3600" />
	<cache id="Accomplishments" max="192" expires="3600" />
	<cache id="Metadata" max="24" expires="1800" />

	<cache id="MessageTemplate" max="32" />
	<cache id="LibraryDLCount" max="144" expires="3600" />

	<cache id="IPInfo" max="1024" expires="345600" />
	<cache id="IPBlock" max="6144" expires="345600" />
	<cache id="HTTPTotals" max="2" expires="7200" />
	<cache id="TableStats" max="12" expires="1800" />
</caches>
