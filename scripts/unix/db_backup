#!/bin/sh
# Database backup script
# (c) 2005 Global Virtual Airlines Group. All Rights Reserved.

# Goto backup directory
cd /home/backup/db
mv *.gz old

# Dump LDIF data
ldapctl stop
slapcat -l ldif.txt -f /usr/local/etc/openldap/slapd.conf
gzip -9 -f ldif.txt
sleep 0.5
ldapctl start

# Dump core table
echo 'Writing mySQL configuration'
mysqldump -C -h mysql.deltava.org mysql `cat /usr/local/etc/sqlbackup` | gzip -9 > mysql.sql.gz

# Dump table definitions
echo 'Writing table definitions'
mysqldump -C -K -d -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` common > common.sql
mysqldump -C -K -d -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` acars > acars.sql
mysqldump -C -K -d -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` dva > dva.sql
mysqldump -C -K -d -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` afv > afv.sql
tar cfvz create_tables.tar.gz *.sql
rm *.sql

# Dump e-mail data
echo 'Writing e-mail configuration'
mysqldump -C -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` postfix | gzip -9 > postfix.sql.gz
mysqldump -C -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` sqmail | gzip -9 > sqmail.sql.gz

# Dump TeamSpeak data
echo 'Writing TeamSpeak configuration'
mysqldump -C -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` teamspeak | gzip -9 > teamspeak.sql.gz

# Dump Common data/Water Cooler/Events
echo 'Writing Common data'
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` common AIRLINEINFO TZ AIRLINES APP_AIRLINES AIRLINE_CODES AIRPORTS AIRPORT_AIRLINE USERDATA OCEANIC ISSUES ISSUE_COMMENTS SYSINFODATA | gzip -9 > common.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` common EVENTS EVENT_AIRPORTS EVENT_CHARTS EVENT_PLANS EVENT_EQTYPES EVENT_SIGNUPS | gzip -9 > events.sql.gz

# Dump Water Cooler
echo 'Writing Water Cooler'
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` common COOLER_CHANNELS COOLER_CHANNELINFO COOLER_THREADS COOLER_THREADHISTORY COOLER_POSTS COOLER_NOTIFY COOLER_POLLS COOLER_VOTES | gzip -9 > cooler.sql.gz

# Dump Navigation Data if we're doing a full backup
if [ "$1" = "full" ]
then
  echo 'Writing Navigation Data'
  mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` common NAVDATA SID_STAR AIRWAYS CHARTS | gzip -9 > navdata.sql.gz
  
  echo 'Writing ACARS Position Archive'
  mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` acars POSITION_ARCHIVE | gzip -9 > acars_pos.sql.gz
fi

# Dump ACARS data
echo 'Writing ACARS data'
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` acars CONS FLIGHTS POSITIONS MESSAGES | gzip -9 > acars.sql.gz

# Dump DVA database
echo 'Writing DVA database'
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` dva PILOTS RATINGS ROLES PIREPS PIREP_COMMENT ACARS_PIREPS PROMO_EQ ASSIGNMENTS ASSIGNLEGS DOCS FLEET NEWSLETTERS EQTYPES EQRATINGS NEWS NOTAMS PILOT_MAP SIGNATURES STAFF STATUS_UPDATES BLOG BLOGCOMMENTS | gzip -9 > dva.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` dva APPLICANTS APPEXAMS APPQUESTIONS CHECKRIDES CR_DESCS EXAMINFO QUESTIONINFO QUESTIONMINFO QE_INFO EXAMS EXAMQUESTIONS EXAMQUESTIONSM TXREQUESTS | gzip -9 > dva_test.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` dva DOWNLOADS INACTIVITY HELP LOG_APP LOG_TASK MSG_TEMPLATES EMAIL_VALIDATION SYS_COMMANDS SYS_HTTPLOG SYS_TASKS SYS_REFERERS | gzip -9 > dva_sys.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` dva SCHEDULE ROUTES SELCAL | gzip -9 > dva_sched.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` dva CERTS CERTREQS CERTEXAMS CERTDOCS COURSES COURSEPROGRESS COURSECHAT INSCALENDAR | gzip -9 > dva_academy.sql.gz

# Dump AFV database
echo 'Writing AFV database'
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` afv PILOTS RATINGS ROLES PIREPS PIREP_COMMENT ACARS_PIREPS PROMO_EQ ASSIGNMENTS ASSIGNLEGS DOCS FLEET EQTYPES EQRATINGS NEWS NOTAMS PILOT_MAP SIGNATURES STAFF STATUS_UPDATES | gzip -9 > afv.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` afv APPLICANTS APPEXAMS APPQUESTIONS CHECKRIDES CR_DESCS EXAMINFO QUESTIONINFO QUESTIONMINFO QE_INFO EXAMS EXAMQUESTIONS EXAMQUESTIONSM TXREQUESTS | gzip -9 > afv_test.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` afv DOWNLOADS INACTIVITY HELP LOG_APP LOG_TASK MSG_TEMPLATES EMAIL_VALIDATION SYS_COMMANDS SYS_HTTPLOG SYS_TASKS SYS_REFERERS | gzip -9 > afv_sys.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` afv SCHEDULE ROUTES SELCAL | gzip -9 > afv_sched.sql.gz
mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` afv CERTS CERTREQS CERTEXAMS CERTDOCS COURSES COURSEPROGRESS COURSECHAT INSCALENDAR | gzip -9 > afv_academy.sql.gz

# Dump Galleries if we're doing a full backup
if [ "$1" = "full" ]
then
  echo 'Writing DVA Image Gallery'
  mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` dva GALLERY GALLERYSCORE | gzip -9 > dva_gallery.sql.gz
  echo 'Writing AFV Image Gallery'
  mysqldump -C -n -t -K -h mysql.deltava.org `cat /usr/local/etc/sqlbackup` afv GALLERY GALLERYSCORE | gzip -9 > afv_gallery.sql.gz
fi

# Change file permissions
chown -R root:gva *
chmod 640 *
