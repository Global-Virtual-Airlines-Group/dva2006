#!/bin/bash
# SCP database backup script
# Copyright 2007, 2008, 2009, 2011, 2012, 2015 Global Virtual Airlines Group. All Rights Reserved.
#
# To get automated SSH working, create an SSH key for the user and then copy id_rsa.pub to the
# remote user's home directory ~/.ssh/authorized_keys
#

USER="dva"
if [ "$2" != "" ]; then
        USER="$2"
fi

OPTS="-avr --delete --progress --bwlimit=2560"

# Back up base files
cd /home/backup
rsync $OPTS cfg/*.tar.gz $USER@$1:cfg 
rsync $OPTS --preallocate db/*.bz2 $USER@$1:db
rsync $OPTS --preallocate sites/*.tar.gz $USER@$1:sites
rsync $OPTS archive/* $USER@$1:archive

# Backup logs via rsync
rsync $OPTS --preallocate httplogs/* $USER@$1:httplogs
rsync $OPTS --preallocate --exclude=svn.revision_base svn $USER@$1:

# Backup mail
rsync $OPTS --preallocate mail/* $USER@$1:mail

# Backup library
rsync $OPTS --preallocate library/* $USER@$1:library

# Exit with success
exit 0
