<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="/WEB-INF/dva_content.tld" prefix="content" %>
<%@ taglib uri="/WEB-INF/dva_html.tld" prefix="el" %>
<content:sysdata var="hasIMAP" name="smtp.imap.enabled" />
<content:sysdata var="IMAPServer" name="smtp.imap.server" />
<c:if test="${hasIMAP && m_access.canEdit}">
<tr class="title caps">
 <td colspan="${cspan + 1}">IMAP MAILBOX SETTINGS AT ${IMAPServer}</td>
</tr>
<c:if test="${(empty emailCfg)}">
<tr>
 <td class="label">&nbsp;</td>
 <td colspan="${cspan}" class="data">${pilot.name} does not currently have a hosted IMAP mailbox. 
<el:cmd url="imap" link="${pilot}" className="sec bld">Click Here</el:cmd> to create a new IMAP mailbox profile.</td>
</tr>
</c:if>
<c:if test="${(!empty emailCfg)}">
<tr>
 <td class="label">&nbsp;</td>
 <td colspan="${cspan}" class="data">${pilot.name} has a hosted IMAP mailbox at ${emailCfg.address}. 
<el:cmd url="imap" link="${pilot}" className="sec bld">Click Here</el:cmd> to edit the IMAP mailbox profile.</td>
</tr>
</c:if>
</c:if>