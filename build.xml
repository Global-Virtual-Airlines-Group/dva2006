		<property name="webapp.ssh.port" value="22" />
		<property name="mail.ssh.port" value="22" />
		<property name="webapp.ssh.user" value="${user.name}" />
		<property name="mail.ssh.user" value="${user.name}" />
		<mkdir dir="../.local_data" />

		<!-- Upload the scripts to web server -->
		<scp todir="${webapp.ssh.user}@${webapp.ssh.server}:/usr/local/sbin/www" port="${webapp.ssh.port}" verbose="yes" trust="yes" keyfile="${webapp.ssh.key}">
			<fileset dir="scripts/pri">
				<modified seldirs="false" algorithm="digest" update="true" delayupdate="false">
					<param name="algorithm.algorithm" value="MD5" />
