        <scp todir="${mail.ssh.user}@${mail.ssh.server}:/usr/local/sbin/www" port="${mail.ssh.port}" verbose="yes" trust="yes" keyfile="${mail.ssh.key}">
            <fileset dir="scripts/sec">
                <modified seldirs="false" algorithm="digest" update="true" delayupdate="false">
                    <param name="algorithm.algorithm" value="MD5" />
